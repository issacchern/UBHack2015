<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:showIn="@layout/activity_add_reminder"
    tools:context="cse.buffalo.edu.ibetterme.AddReminderActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter description"
        android:textSize="25dp"
        android:id="@+id/textEditString" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="From:  "
            android:textSize="30dp"/>

        <Button
            android:layout_weight="3"
            android:id="@+id/fromTimeButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="click to add"
            android:textSize="20dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="To:    "
            android:textSize="30dp"/>

        <Button
            android:layout_weight="3"
            android:id="@+id/toTimeButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="click to add"
            android:textSize="20dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:textSize="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:textSize="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T"
            android:textSize="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W"
            android:textSize="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T"
            android:textSize="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F"
            android:textSize="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:textSize="20dp"/>


    </LinearLayout>

    <EditText

        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:hint="Add some notes here ..."
        android:id="@+id/editText"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="8"
        android:gravity="top|left"
        android:maxLines="10"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/submit_button"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Reminder"
        android:textSize="20dp"
        android:background="@color/colorAccent"/>



</LinearLayout>
